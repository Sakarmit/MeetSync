<div class="availability-schedule">
  <div class="days">
    {% set days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'] %}
    {% for label in days %}
      <div class="label">{{ label }}</div>
    {% endfor %}
  </div>

  <div class="schedule-container">
    <div class="body">
      <div class="times">
        {% for h in range(24) %}
          <div class="label">{{ "%02d:00" % h }}</div>
        {% endfor %}
      </div>
      <div class="slots">
        {# 24 hours * 4 rows/hour; 5 days #}
        {% for r in range(24 * 4) %}
          {% for d in range(5) %}
            {# Compute absolute minutes = r*15 for aria-label #}
            {% set abs_min = r * 15 %}
            {% set hour = (abs_min // 60) %}
            {% set minute = abs_min % 60 %}
            <div
              class="slot"
              data-day="{{ d }}"
              data-row="{{ r }}"
              aria-label="{{ days[d] }}, {{ '%02d'|format(hour) }}:{{ '%02d'|format(minute) }}"
              role="button"
            ></div>
          {% endfor %}
        {% endfor %}
      </div>
    </div>
    <div class="selectors">
      <button class="selector" data-type="busy">
        <span class="box"></span>
        <span class="label">Unavailable</span>
      </button>
      <button class="selector" data-type="tentative">
        <span class="box"></span>
        <span class="label">Tentative</span>
      </button>
      <button class="selector" data-type="available">
        <span class="box"></span>
        <span class="label">Available</span>
      </button>
    </div>
  </div>

  <div class="controls">
      <button type="button" class="clear">Clear</button>
      <button type="button" class="save">Save</button>
  </div>
</div>
